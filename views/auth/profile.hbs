<div class="row">

  <div class="col-lg-4">
    <figure>
      <img class="avatar" src="{{user.avatarPath}}" alt="{{user.username}}">
    </figure>
    <h1>Welcome, {{user.username}}! </h1>

    <section class="file-upload">
      <h6>Upload your picture to your profile</h6>
      <form action="/profile" method="post" enctype="multipart/form-data">
        <input type="file" name="phototoupload"><br>
        <input type="submit" value="Save"><br>
      </form>
    </section>
  </div>

  <div class="col-lg-8">
    <h3 class="text-center">Favourites heroes</h3>
    <div class="row p-3">
      {{#each user.favourites}}
      <div class="col-md-3 text-center">
        <a href="/heroes/details/{{idBD}}"><img class="hero-img-pf" src="{{image}}" alt="{{name}}"></a>
        <p class="mt-2">{{name}}</p>
      </div>

      {{/each}}

    </div>
  </div>


</div>





<br><br>