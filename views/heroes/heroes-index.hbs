<h2>Mastering Hero list</h2>

<select name="select" id="sort" class="custom-select-lg mb-5">
  <option selected>Sort alphabetically</option>
  <option value="A-B">A-B</option>
  <option value="C-E">C-E</option>
  <option value="F-I">F-I</option>
  <option value="J-M">J-M</option>
  <option value="N-S">N-S</option>
  <option value="T-V">T-V</option>
  <option value="W-Z">W-Z</option>
</select>


<div class="row sort-container">

</div>

<div class="row wo-sort">

  {{#each heroes}}

  <div class="col-md-3 col-6 mb-4">
    {{>heroCard this}}
  </div>

  {{/each}}

</div>

<script src="/javascripts/sortScript.js"></script>